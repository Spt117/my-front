{
    "name": "beyblade_products",
    "type": "base",
    "description": "Collection for Beyblade products from Shopify",
    "fields": {
        "product": {
            "type": "select",
            "required": false,
            "unique": false,
            "options": {
                "values": ["Starter", "Booster", "Triple Booster", "Customize Set", "Deck Set", "Random Booster", "Launcher", "Battle Set", "Entry Set", "Stadium", "Accessory"],
                "maxSelect": 1
            }
        },
        "title": {
            "type": "text",
            "required": true,
            "unique": false,
            "options": {
                "min": 1,
                "max": 255
            }
        },
        "productCode": {
            "type": "text",
            "required": true,
            "unique": false,
            "options": {
                "min": 1,
                "max": 50
            }
        },
        "brand": {
            "type": "select",
            "required": true,
            "unique": false,
            "options": {
                "values": ["Hasbro", "Takara Tomy"],
                "maxSelect": 1
            }
        },
        "images": {
            "type": "json",
            "required": false,
            "unique": false
        },
        "releaseDate": {
            "type": "date",
            "required": false,
            "unique": false
        },
        "releaseType": {
            "type": "select",
            "required": true,
            "unique": false,
            "options": {
                "values": ["regular", "Corocoro", "Lottery", "Tournament"],
                "maxSelect": 1
            }
        },
        "series": {
            "type": "select",
            "required": true,
            "unique": false,
            "options": {
                "values": ["Basic Line", "Unique Line", "Custom Line", "X Over Project"],
                "maxSelect": 1
            }
        }
    },
    "listRule": "@request.auth.id != \"\"",
    "viewRule": "@request.auth.id != \"\"",
    "createRule": "@request.auth.role = \"admin\"",
    "updateRule": "@request.auth.role = \"admin\"",
    "deleteRule": "@request.auth.role = \"admin\""
}
